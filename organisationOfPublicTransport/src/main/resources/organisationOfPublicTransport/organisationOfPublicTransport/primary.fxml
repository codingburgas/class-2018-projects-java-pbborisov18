<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="hbox" maxHeight="1080" maxWidth="1920" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="organisationOfPublicTransport.organisationOfPublicTransport.MainMenuController">
   <children>
      <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="640.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <Label focusTraversable="false" text="Busses" />
                  <ComboBox fx:id="busComboBox" focusTraversable="false" onAction="#busSelectionChangeListener" prefWidth="150.0" />
               </children>
            </HBox>
            <ListView fx:id="busListView" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
               <children>
                <Button focusTraversable="false" mnemonicParsing="false" text="Broken Bus" />
                <Button focusTraversable="false" mnemonicParsing="false" text="Fixed Bus" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="640.0" HBox.hgrow="ALWAYS">
         <children>
            <Label focusTraversable="false" text="Actions" />
            <ListView focusTraversable="false" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <VBox maxWidth="-Infinity" prefHeight="1080.0" prefWidth="640.0" HBox.hgrow="ALWAYS">
         <children>
            <Label focusTraversable="false" text="Routes" />
            <ListView focusTraversable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <Button focusTraversable="false" mnemonicParsing="false" text="Reroute" />
               </children>
            </HBox>
            <Label focusTraversable="false" text="Status" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</HBox>
